<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/webapp_4_0.xsd"
         version="4.0">
  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>org.example.MainServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>login-servlet</servlet-name>
    <servlet-class>org.example.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login-servlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>registration-servlet</servlet-name>
    <servlet-class>org.example.RegistrationServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>registration-servlet</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
</web-app>